{
  "version": 2,
  "buildCommand": null,
  "outputDirectory": "web",
  "public": true,
  "rewrites": [
    {
      "source": "/api/completion",
      "destination": "/api/completion.js"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.js"
    },
    {
      "source": "/api/ai/generate",
      "destination": "/api/ai-generate.js"
    },
    {
      "source": "/api/ai/classify",
      "destination": "/api/ai-classify.js"
    },
    {
      "source": "/api/mcp/status",
      "destination": "/api/mcp-status.js"
    },
    {
      "source": "/api/mcp-analyze",
      "destination": "/api/mcp-analyze.js"
    },
    {
      "source": "/api/mcp-health",
      "destination": "/api/mcp-health.js"
    },
    {
      "source": "/api/tts",
      "destination": "/api/tts.js"
    },
    {
      "source": "/api/tts-voices",
      "destination": "/api/tts-voices.js"
    },
    {
      "source": "/api/tts-clone",
      "destination": "/api/tts-clone.js"
    },
    {
      "source": "/api/n8n/:path*",
      "destination": "/api/n8n-proxy.js"
    },
    {
      "source": "/api/mcp/:path*",
      "destination": "/api/mcp-proxy.js"
    },
    {
      "source": "/api/completion-stream",
      "destination": "/api/completion-stream.js"
    },
    {
      "source": "/api/completion",
      "destination": "/api/gateway-proxy.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js|css|svg|png|jpg|jpeg|gif|ico|woff|woff2|ttf|eot)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
