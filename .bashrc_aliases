# ===================================
# Docker Manager - Capibara6 Aliases
# ===================================
# Para usar estos alias, agrega esta línea a tu ~/.bashrc:
#   source ~/capibara6/.bashrc_aliases
#
# O copia el contenido directamente a tu ~/.bashrc

# Alias para gestión rápida de contenedores Docker
alias dstatus='python3 ~/capibara6/docker_manager.py status'
alias dstart='python3 ~/capibara6/docker_manager.py start'
alias dstop='python3 ~/capibara6/docker_manager.py stop'
alias drestart='python3 ~/capibara6/docker_manager.py restart'
alias dhealth='python3 ~/capibara6/docker_manager.py health'
alias dlogs='python3 ~/capibara6/docker_manager.py logs'
alias drebuild='python3 ~/capibara6/docker_manager.py rebuild'
alias dclean='python3 ~/capibara6/docker_manager.py clean'
alias dhelp='python3 ~/capibara6/docker_manager.py help'

# Alias específicos para servicios comunes
alias dapi-logs='python3 ~/capibara6/docker_manager.py logs capibara6-api'
alias dapi-rebuild='python3 ~/capibara6/docker_manager.py rebuild capibara6-api'
alias dworker-logs='python3 ~/capibara6/docker_manager.py logs capibara6-worker-1'

# Atajos para navegar al proyecto
alias cdcapi='cd ~/capibara6'
alias cdcback='cd ~/capibara6/backend'
alias cdcweb='cd ~/capibara6/web'
